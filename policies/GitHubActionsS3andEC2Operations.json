{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:CreateBucket"
      ],
      "Resource": [
        "arn:aws:s3:::dev-terraform-state-bucket-*",
        "arn:aws:s3:::prd-terraform-state-bucket-*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:DeleteObject"
      ],
      "Resource": [
        "arn:aws:s3:::dev-terraform-state-bucket-*/*",
        "arn:aws:s3:::prd-terraform-state-bucket-*/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ec2:StartInstances",
        "ec2:StopInstances"
      ],
      "Resource": "*"
    },
    {
      "Sid": "",
      "Effect": "Allow",
      "Principal": {
   	   "Federated": "arn:aws:iam::134412793160:oidc-provider/token.actions.githubusercontent.com"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      	"Condition": {
        	"StringEquals": {
                	"token.actions.githubusercontent.com:aud": "sts.amazonaws.com",
                	"token.actions.githubusercontent.com:sub": "repo:nkmr/test-ansible"
                }
            }
	}
  ]
}
